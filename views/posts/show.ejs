<div class="top display column top is-9 columns is-centered">
  <div class="showimage column is-8">
    <img class ="showimage" src="<%= img %>"/>
  </div>
  <div class="post-details is-multiline column is-4">
    <div  class="topdetails">
      <div class="pic-container">
        <img src="<%= addedBy.profileImg %>" style="height:44px; width:44px; border-radius:50%;">
      </div>
      <div class="">
        <h2><a href="/users/<%= addedBy.id %>"><%= addedBy.username %></a></h2>
        <h3><%= location %></h3>
      </div>
    </div>
    <h2 class="column is-12"><%= description %></h2>
    <h4 class="column is-12"><%= time.toDateString() %></h4>
    <% if(locals.isLoggedIn) { %>
      <div class="section">
        <div>
          <a class="button" href="/posts/<%= id %>/edit">Edit</a>
        </div>
        <div>
          <form action="/posts/<%= id %>?_method=DELETE" method="post">
            <button class="button is-danger">DELETE</button>
          </form>
        </div>
      </div>
      <ul>
        <% comments.forEach(comment => { %>
          <li>
            <span><%= comment.user.username %></span>
            <span><%= comment.content %></span>
            <form class="delete-form" method="POST" action="/posts/<%= _id %>/comments/<%= comment._id %>?_method=DELETE">
              <button class="delete-button">X</button>
            </form>
          </li>
          <% }) %>
        </ul>
        <div>
          <form method="POST" action="/posts/<%= _id %>/comments">
            <input placeholder="Comment" name="content">
            <input name='user' value='<%= locals.currentUser._id %>' hidden/>
          </form>
          <% } %>
        </div>
      </div>
    </div>
