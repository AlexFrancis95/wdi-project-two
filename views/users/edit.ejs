<form class="column is-4 is-centered" action="/users/<%= _id %>?_method=PUT" method="post">
  <div>
    <span><img class="profileImg" src="<%= profileImg %>" alt=""><%= username %></span>
  </div>
  <h1>Edit Your Account</h1>
  <div class="field">
    <label class="label">Username</label>
    <div class="control has-icons-left">
      <input class ="input" type="text" name="username" value="<%= username %>" placeholder="Username">
      <span class="icon is-small is-left">
        <i class="fas fa-user"></i>
      </span>
    </div>
  </div>
  <div class="field">
    <label class="label">Email</label>
    <div class="control has-icons-left">
      <input class ="input" type="text" name="email" value="<%= email %>" placeholder="Email address">
      <span class="icon is-small is-left">
        <i class="fas fa-envelope"></i>
      </span>
    </div>
  </div>
  <div class="field">
    <label class="label">Name</label>
    <div class="control has-icons-left">
      <input class ="input" type="text" name="name" value="<%= name %>" placeholder="Name">
      <span class="icon is-small is-left">
        <i class="fas fa-pen"></i>
      </span>
    </div>
  </div>
  <div class="field">
    <label class="label">Bio</label>
    <div class="control has-icons-left">
      <textarea class ="input" type="text" name="bio" value="" placeholder="Bio"><%= bio %></textarea>
      <span class="icon is-small is-left">
        <i class="fas fa-pen"></i>
      </span>
    </div>
  </div>
  <div class="field">
    <label class="label">Profile Photo</label>
    <div class="control has-icons-left">
      <input class ="input" type="text" name="profileImg" value="<%= profileImg %>" placeholder="Profile picture URL">
      <span class="icon is-small is-left">
        <i class="fas fa-camera"></i>
      </span>
    </div>
  </div>
  <div class="field">
    <label class="label">Password</label>
    <div class="control has-icons-left">
      <input class ="input" type="password" value="<%= password %>" placeholder="Password">
      <span class="icon is-small is-left">
        <i class="fas fa-key"></i>
      </span>
      <p class="help">Password must be at least 6 characters long</p>
    </div>
  </div>
  <div class="field">
    <label class="label">Confirm Password</label>
    <div class="control has-icons-left">
      <input class ="input" type="password" name="password" value="<%= password %>" placeholder="Password">
      <span class="icon is-small is-left">
        <i class="fas fa-key"></i>
      </span>
      <p class="help">Passwords must match</p>
    </div>
  </div>
  <div class="control">
    <button class="button is-link">Submit</button>
  </div>
  </form>
