<div class=" display column top is-9 columns is-centered">
  <div class="showimage column is-8">
    <img class ="showimage" src="<%= img %>"/>
  </div>
  <div class="user-details columns is-multiline column is-4">
    <a  class="column is-12" href="#"<h1><%= username %></h1></a>
    <h2 class="column is-12"><%= description %></h2>
    <h3 class="column is-12"><%= location %></h3>
    <h4 class="column is-12">Date Posted <%= time.toDateString() %></h4>
    <% if(locals.isLoggedIn) { %>
      <div class="section">
        <div>
          <a class="button" href="/posts/<%= id %>/edit">Edit</a>
        </div>
        <div>
          <form action="/posts/<%= id %>?_method=DELETE" method="post">
            <button class="button is-danger">DELETE</button>
          </form>
        </div>
      </div>
      <% comments.forEach(comment => { %>
        <div>
          <span><%= comment.content %></span>
        </div>
      <% }) %>
      <div>
        <p>Comments</p>
        <form method="POST" action="/posts/<%= _id %>/comments">
          <textarea name="content"></textarea>
          <input name="username" type="hidden" value="<%= locals.currentUser.username %>"/>
          <button>Post</button>
        </form>
    <% } %>
  </div>
</div>
</div>
