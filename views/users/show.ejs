<div class="columns column is-8 left show">
  <div class="columns column is-4 is-centered">
    <img class="profileImg" src="<%= profileImg %>">
  </div>
  <div class="column is-8">
  <span class="user"><%= username %>
  <% if(locals.isLoggedIn) { %>
    <%   if (locals.currentUser.username === username) {%>
      <button class="edit-user"><a href="/users/<%= _id %>/edit">Edit Profile</a></button>
    <% } else { %>
  <% } %>
  <% } %>
  </span>
  <% if (name) { %>
    <p class="name"><%= name %>
  <% } %>
  <% if (bio) { %>
    <p><%= bio %>
  <% } %>
  </div>
</div>

<div class="columns column is-8 is-centered is-multiline is-mobile">  <% addedPosts.forEach(post => { %>
  <div class="column is-4-desktop is-4-tablet is-6-mobile">
    <figure class="image is-square">
      <a href = "/posts/<%= post.id %>">
        <img class="photo" src="<%= post.img %>">
      </a>
      <div class="popinfo">
      </div>
    </figure>
  </div>
  <% }) %>
</div>
